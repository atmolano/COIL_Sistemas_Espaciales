// Pines de control
const int pinPWM = 4;  // D4
const int pinA0 = 13;  // D13
const int pinA1 = 12;  // D12
const int pinA2 = 14;  // D14

// Estado actual
int direccion = 1;     // 1 o 2
int magnetorquer = 1;  // 1 o 2
bool activoA = true;
bool activoB = false;

void setup() {
  Serial.begin(115200);
  pinMode(pinPWM, OUTPUT);
  pinMode(pinA0, OUTPUT);
  pinMode(pinA1, OUTPUT);
  pinMode(pinA2, OUTPUT);
  Serial.println("Ingrese 'q' para cambiar la direcci칩n, 'w' para cambiar el magnetorquer activo");
}

void loop() {
  // Verificar entrada del usuario
  if (Serial.available()) {
    char input = Serial.read();
    if (input == 'q') {
      direccion = (direccion == 1) ? 2 : 1;
      Serial.print("Direcci칩n cambiada a: ");
      Serial.println(direccion);
    } else if (input == 'w') {
      activoA = !activoA;
      activoB = !activoB;
      Serial.print("Magnetorquer activo: ");
      Serial.println(activoA ? "A" : "B");
    }
  }

  // Establecer se침ales de control
  digitalWrite(pinPWM, HIGH);
  digitalWrite(pinA0, (direccion == 1) ? LOW : HIGH);
  digitalWrite(pinA1, activoA ? LOW : HIGH);
  digitalWrite(pinA2, activoB ? HIGH : LOW);

  // Imprimir informaci칩n
  Serial.print("MTQ: ");
  Serial.print(activoA ? "A" : "B");
  Serial.print(" | DIR: ");
  Serial.println(direccion);

  delay(100);
}
